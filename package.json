{
  "name": "fullstack-assessment",
  "version": "1.0.0",
  "description": "Andre's FullStack Assessment. Project: Simple Employee Maintenance web app",
  "author": "AndrÃ© Ripari",
  "license": "ISC",
  "private": true,
  "scripts": {
    "start": "concurrent --kill-others \"npm run start-prod\" \"npm run start-prod-api\"",
    "start-prod": "better-npm-run start-prod",
    "start-prod-api": "better-npm-run start-prod-api",
    "start-dev": "better-npm-run start-dev",
    "start-dev-api": "better-npm-run start-dev-api",
    "debug-dev-api": "better-npm-run debug-dev-api",
    "seed": "node ./api/scripts/seedDb.js",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "build": "next build",
    "lint": "next lint"
  },
  "betterScripts": {
    "start-prod": {
      "command": "next start",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start-prod-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "production"
      }
    },
    "start-dev": {
      "command": "next dev",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start-dev-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "development"
      }
    },
    "debug-dev-api": {
      "command": "nodemon ./bin/api.js",
      "env": {
        "DEBUG": "express3:*",
        "NODE_PATH": "./api",
        "NODE_ENV": "development"
      }
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.18.2",
    "formik": "^2.4.5",
    "http-errors": "~1.6.3",
    "http-status": "^1.7.0",
    "morgan": "~1.9.1",
    "next": "^13.5.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.33.0",
    "sqlite3": "^5.1.6",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/react": "18.2.28",
    "autoprefixer": "^10.4.16",
    "better-npm-run": "0.0.8",
    "cors": "^2.8.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.3",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=16.14"
  }
}
